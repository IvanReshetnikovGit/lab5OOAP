@{
    ViewData["Title"] = "Торговий автомат";
}

<h2>Торговий автомат</h2>

<form method="post">
    <label>Ціна товару (грн):</label>
    <input type="number" step="0.01" name="itemPrice" required /><br /><br />

    <label>Внесена сума (грн):</label>
    <input type="number" step="0.01" name="insertedMoney" required /><br /><br />

    <button type="submit">Придбати</button>
</form>

@if (ViewBag.Result != null)
{
    <p><strong>Результат:</strong> @ViewBag.Result</p>
}
